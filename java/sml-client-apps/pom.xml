<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>eu.peppol</groupId>
    <artifactId>parent-pom</artifactId>
    <version>12</version>
    <relativePath>../../parent-pom/pom.xml</relativePath>
  </parent>
  <groupId>eu.peppol.sml</groupId>
  <artifactId>sml-client-apps</artifactId>
  <version>1.2.1-SNAPSHOT</version>
  <name>sml-client-apps</name>
  <description>PEPPOL SML Client applications</description>

  <scm>
    <developerConnection>scm:svn:https://joinup.ec.europa.eu/svn/peppol/devinprogress/java/sml/client-apps</developerConnection>
  </scm>

  <dependencies>
    <dependency>
      <groupId>eu.peppol.sml</groupId>
      <artifactId>sml-client-library</artifactId>
      <version>1.2.0</version>
    </dependency>
    <dependency>
      <groupId>com.phloc</groupId>
      <artifactId>phloc-commons</artifactId>
      <version>3.3.11</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
    </dependency>
    <dependency>
      <groupId>com.miglayout</groupId>
      <artifactId>miglayout-swing</artifactId>
      <version>4.2</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>eu.peppol.sml.client.console.Main</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
