<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>CUSTOM-Run In Jetty</actionName>
            <displayName>Run In Jetty</displayName>
            <goals>
                <goal>jetty:run</goal>
            </goals>
            <properties>
                <netbeans.deploy.debugmode>true</netbeans.deploy.debugmode>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-Debug in Jetty</actionName>
            <displayName>Debug in Jetty</displayName>
            <goals>
                <goal>jetty:run</goal>
            </goals>
            <properties>
                <jpda.listen>maven</jpda.listen>
                <netbeans.deploy.debugmode>true</netbeans.deploy.debugmode>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-Stop Jetty</actionName>
            <displayName>Stop Jetty</displayName>
            <goals>
                <goal>jetty:stop</goal>
            </goals>
        </action>
    </actions>
